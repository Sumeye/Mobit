@model Mobit.Models.Products
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

@if (ViewBag.Error !=null)
{
    @ViewBag.Error
}

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-slick3-dots"></div>

                <div class="slick3">
                    <div class="item-slick3" data-thumb="images/thumb-item-01.jpg">
                        <div class="wrap-pic-w">

                            <img src="@Url.Content(Model.ImagePath)" alt="" width="1200" height="700" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-size14 p-t-30 respon5">
            <h4 class="product-detail-name m-text16 p-b-13">
                <p>Ürün Adı:</p>
            </h4>
            <h4 class="product-detail-name m-text16 p-b-13">
                @Model.ProductName
            </h4>
            <h4 class="product-detail-name m-text16 p-b-13">
                <p>Ürün Açıklaması:</p>
            </h4>
            <h4 class="product-detail-name m-text16 p-b-13">
                @Model.Description
            </h4>

        </div>
    </div>
</div>



<div class="container bgwhite p-l-175 p-b-100 ">

        <form action="~/Home/Details/@Model.ProductId" method="post" enctype="multipart/form-data" class="leave-comment">
            <h4 class="m-text26 p-b-36 p-t-15">
               Mesaj Gönderin
            </h4>
            <div class="bo4 of-hidden size15 m-b-20">
                <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="receiverEmail" placeholder="Email Adres">
            </div>
            <div class="bo4 of-hidden size15 m-b-20">
                <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="subject" placeholder="Başlık">
            </div>

            <textarea class="dis-block s-text7 size20 bo4 p-l-22 p-r-22 p-t-13 m-b-20" name="message" placeholder="Mesaj"></textarea>

            <div class="w-size25">
                <!-- Button -->
              
                <button  class="flex-c-m size2 bg1 bo-rad-23 hov1 m-text3 trans-0-4">
                    GÖNDER
                </button>
            </div>
        </form>
 
</div>











